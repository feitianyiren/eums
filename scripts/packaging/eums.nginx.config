upstream django {
    server unix:///opt/app/eums/eums.sock; # for a file socket
    #server 127.0.0.1:8001;
}

upstream contacts {
    server 127.0.0.1:8005;
}

upstream elasticsearch {
    server 127.0.0.1:9200;
}

server {
    listen 80;
    server_name 127.0.0.1; # substitute your machine's IP address or FQDN
    charset utf-8;
    access_log /var/log/nginx/eums.access.log slim;
    error_log /var/log/nginx/eums.error.log debug;
    # max upload size
    client_max_body_size 75M;   # adjust to taste

    location /static {
        alias /opt/app/eums/eums/client/;
    }

    error_page 404 /csv_expired_promote.html;
    location = /csv_expired_promote.html {
            root /opt/app/eums/eums/templates;
            internal;
    }

    location / {
        uwsgi_pass django;
        include /opt/app/eums/eums/uwsgi_params;
    }

    location /contacts/ {
        proxy_pass http://contacts/api/contacts/;
        proxy_redirect off;
        proxy_set_header Host $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-NginX-Proxy true;
        proxy_ssl_session_reuse off;
    }

    location /elasticsearch/ {
        proxy_pass http://elasticsearch/;
        proxy_redirect off;
        proxy_set_header Host $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-NginX-Proxy true;
        proxy_ssl_session_reuse off;
    }
}
